{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_meeting_room_manage' %}

{% set script_controller = '../../../custom/js/controller/meeting-room/index' %}

{% block main %}

  {{ web_macro.flash_messages() }}

  <table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
    <thead>
    <tr>
      <th width="10%">{{ 'ID'|trans }}</th>
      <th width="30%">{{ '会议室名称'|trans }}</th>
      <th width="20%">{{ '规模'|trans }}</th>
      <th width="20%">{{ '备注'|trans }}</th>
      <th width="20%">{{ '操作'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% if meetingRooms|default() %}
      {% for meetingRoom in meetingRooms %}
        {% include '@Custom/admin/meeting-room/index-tr.html.twig' %}
      {% endfor %}
    {% else %}
      <tr>
        <td colspan="20">
          <div class="empty">{{ '暂无会议室信息!'|trans }}</div>
        </td>
      </tr>
    {% endif %}
    </tbody>
  </table>
  {{ admin_macro.paginator(paginator) }}

{% endblock %}
